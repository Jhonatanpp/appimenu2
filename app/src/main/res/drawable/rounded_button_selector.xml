<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#C62828"
                android:centerColor="#B71C1C"
                android:endColor="#8E0000"
                android:angle="90" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#88000000" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ED3E3B"
                android:centerColor="#E53935"
                android:endColor="#C62828"
                android:angle="90" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#AA000000" />
        </shape>
    </item>
</selector>
