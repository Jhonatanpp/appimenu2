<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <!-- Logo centrado arriba animado -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loginAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="72dp"
        android:padding="8dp"
        android:contentDescription="Logo animado"
        app:lottie_fileName="login_animation.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card contenedora -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/loginAnimation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio de Sesi칩n"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#040404"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editTextCorreo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Correo electr칩nico"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_background"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/editTextContrasena"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contrase침a"
                android:inputType="textPassword"
                android:background="@drawable/input_background"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesi칩n"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"
                android:elevation="4dp"
                android:paddingVertical="14dp"
                android:stateListAnimator="@drawable/button_elevation_animator"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>