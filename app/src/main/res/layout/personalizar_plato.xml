<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFF8EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:clipToOutline="true"
        android:outlineProvider="background">

        <TextView
            android:id="@+id/tvNombrePersonalizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Plato"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDescripcionPersonalizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        android:textSize="16sp"
        android:textColor="#555"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvPrecioPersonalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/editTextComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comentarios o preferencias"
        android:minLines="3"
        android:gravity="top"
        android:background="@drawable/rounded_edittext"
        android:padding="14dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnConfirmarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Pedido"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:outlineProvider="background" />

</LinearLayout>